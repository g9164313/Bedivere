<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:g2="urn:import:com.googlecode.gwt.charts.client.calendar"
	xmlns:m="urn:import:gwt.material.design.client.ui" >
	<ui:style>
	</ui:style>
	
<m:MaterialModal type="DEFAULT" dismissable="true" inDuration="10" outDuration="10" ui:field="root">
	
	<m:MaterialModalContent>

		<m:MaterialRow>
			<m:MaterialColumn>
				<m:MaterialTextBox ui:field="boxDevVendor" placeholder="儀器廠牌" width="11em"/>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox ui:field="boxDevSerial" placeholder="儀器型號" width="11em"/>				
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox ui:field="boxDevNumber" placeholder="儀器序號" width="11em"/>
			</m:MaterialColumn>
		</m:MaterialRow>
		
		<m:MaterialRow>
			<m:MaterialColumn>
				<!-- placeholder="偵檢器類型" -->
				<m:MaterialButton textColor="white" backgroundColor="blue" activates="dp-3" width="11em" ui:field="btnDetType" />				
				<m:MaterialDropDown activator="dp-3" ui:field="drpDetType"/>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox ui:field="boxDetSerial" placeholder="偵檢器型號" width="11em"/>				
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox ui:field="boxDetNumber" placeholder="偵檢器序號" width="11em"/>
			</m:MaterialColumn>
		</m:MaterialRow>
		
		<m:MaterialRow>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="預約日期" width="11em" ui:field="boxMeet" />
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="更新日期" width="11em" ui:field="boxLast" />
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="備註" width="11em" ui:field="boxMemo" />				
			</m:MaterialColumn>
		</m:MaterialRow>
		
		<m:MaterialRow>
			<m:MaterialColumn>
				<m:MaterialTextBox ui:field="boxArea" placeholder="偵檢窗面積" width="11em"/>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox ui:field="boxFactor" placeholder="方向修正值" width="11em"/>				
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox ui:field="boxSteer" placeholder="廠商建議值" width="11em"/>
			</m:MaterialColumn>
		</m:MaterialRow>

		<m:MaterialRow>
			<m:MaterialColumn>
				<m:MaterialTextBox ui:field="boxOKey" placeholder="委託單位" width="11em"/>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialLabel ui:field="txtOwner" width="22em" />
			</m:MaterialColumn>
		</m:MaterialRow>

	</m:MaterialModalContent>
	<!-- 確認/取消 -->
	<m:MaterialModalFooter>		
		<m:MaterialButton text="確認" type="FLAT" ui:field="btnAction" />
		<m:MaterialButton text="取消" type="FLAT" ui:field="btnCancel" />
	</m:MaterialModalFooter>
	
</m:MaterialModal>

</ui:UiBinder> 