<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:g2="urn:import:com.googlecode.gwt.charts.client.calendar"
	xmlns:m="urn:import:gwt.material.design.client.ui" >
	
	<ui:style>
	.important {
		font-weight: bold;
	}
	@external .active;
        .colapsHeader.active{
        background: #e0e0e0;
    }
	</ui:style>	
	<m:MaterialCollapsibleItem ui:field="cpiEntry" waves="DEFAULT" width="100%">
	
		<!-- Header component for custome layouts -->
		<m:MaterialCollapsibleHeader  addStyleNames="{style.colapsHeader}">
			
			<m:MaterialRow margin="0">
				<m:MaterialColumn>
					<m:MaterialLabel ui:field="txtTotal" />
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialLabel ui:field="txtKey"  />
				</m:MaterialColumn>
				<m:MaterialColumn truncate="true">				
					<m:MaterialLabel grid="l15 m15 s15"   ui:field="txtName" />					
				</m:MaterialColumn>
				<m:MaterialIcon iconType="PIN_DROP" waves="DEFAULT" float="RIGHT" circle="true" />			
			</m:MaterialRow>
			
		</m:MaterialCollapsibleHeader>
		
		<m:MaterialCollapsibleBody>
			<m:MaterialRow>
				<m:MaterialColumn>
					<m:MaterialLabel text="聯絡地址："/>
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialLabel ui:field="txtAddress" />
				</m:MaterialColumn>				
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn>		
					<m:MaterialLabel text="聯絡方式："/>
				</m:MaterialColumn>
				<m:MaterialColumn>					
					<m:MaterialLabel ui:field="txtInteract" />
				</m:MaterialColumn>				
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn>
					<m:MaterialLabel text="聯絡人："/>
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialLabel ui:field="txtPerson" />
				</m:MaterialColumn>				
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn>	
					<m:MaterialLabel text="附註事項："/>
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialLabel ui:field="txtMemo" />
				</m:MaterialColumn>				
			</m:MaterialRow>
		</m:MaterialCollapsibleBody>
		
	</m:MaterialCollapsibleItem>	
</ui:UiBinder> 