<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:g2="urn:import:com.googlecode.gwt.charts.client.calendar"
	xmlns:m="urn:import:gwt.material.design.client.ui" >
	
<ui:style>
	@external side-nav, active;
    body{
        background-color: #e9e9e9;
        overflow: auto !important;
    }
    .side-nav li.active{
        border-left: 4px solid #757575;
    }
    .bordered{
        border-left: 2px solid #e9e9e9;
    }
    .animation{
        transition: 0.4s all;
        -webkit-transition: 0.4s all;
        -moz-transition: 0.4s all;
    }
</ui:style>

<m:MaterialPanel ui:field="root">

        <!-- Header Section -->
        <m:MaterialHeader depth="996" layoutPosition="FIXED" width="100%">
            <!-- NavBar Component -->
            <m:MaterialNavBar ui:field="appNav" >            	
                <m:MaterialNavSection float="LEFT" hideOn="NONE">
                	<m:MaterialLink iconPosition="NONE" tooltip="排程" tooltipPosition="BOTTOM" iconType="EVENT" ui:field="lnkPanMeet" />
                	<!-- <m:MaterialLink iconPosition="NONE" tooltip="報告" tooltipPosition="BOTTOM" iconType="DESCRIPTION" ui:field="lnkPanProdx" /> -->
                	<m:MaterialLink iconPosition="NONE" tooltip="會計" tooltipPosition="BOTTOM" iconType="ACCOUNT_BALANCE" ui:field="lnkPanAccnt" />
                </m:MaterialNavSection>
                <m:MaterialNavSection float="RIGHT" hideOn="NONE">
                	
                    <m:MaterialLink iconPosition="NONE" tooltip="搜尋" tooltipPosition="BOTTOM" iconType="SEARCH" ui:field="lnkSearch" />
                    <m:MaterialLink iconPosition="NONE" tooltip="搜尋清單" tooltipPosition="BOTTOM" iconType="RECEIPT" ui:field="lnkSelect" />
                    <m:MaterialLink iconPosition="NONE" tooltip="最近50筆資料" tooltipPosition="BOTTOM" iconType="AUTORENEW" ui:field="lnkRenew" />
                    <m:MaterialLink iconPosition="NONE" tooltip="列印" tooltipPosition="BOTTOM" iconType="PRINT" ui:field="lnkPrint" />
                    <m:MaterialLink iconPosition="NONE" tooltip="上傳" tooltipPosition="BOTTOM" iconType="FILE_UPLOAD" ui:field="lnkUpload" />
                </m:MaterialNavSection>
            </m:MaterialNavBar>
            <!-- Search Component -->
            <m:MaterialNavBar ui:field="searchNav" backgroundColor="white" visible="false">
                <m:MaterialSearch ui:field="search" placeholder="搜尋xxxx" active="true"/>
            </m:MaterialNavBar>
        </m:MaterialHeader>
 
        <!-- Container -->
        <m:MaterialContainer paddingTop="70" paddingLeft="7" paddingRight="7">
        
        	<m:MaterialRow>
        		<m:MaterialColumn>
        		    <!-- 委託單位 -->
        			<m:MaterialPanel  backgroundColor="white"  layoutPosition="RELATIVE" marginTop="20"	padding="7">
        				<m:MaterialRow>
        					<m:MaterialColumn> <m:MaterialTextBox placeholder="委託單位" iconType="ACCOUNT_CIRCLE" /> </m:MaterialColumn>
        					<m:MaterialColumn> 
        						<m:MaterialLabel ui:field="txtInfo1"/> 
        						<m:MaterialLabel ui:field="txtInfo2"/>
        					</m:MaterialColumn>
        					<m:MaterialColumn float="RIGHT">
        						<m:MaterialIcon iconType="CREATE" waves="DEFAULT"  circle="true" ui:field="icoEdit1" />
        						<m:MaterialIcon iconType="CLEAR" waves="DEFAULT"  circle="true" ui:field="icoClear1" />
        					</m:MaterialColumn>
        				</m:MaterialRow>
        			</m:MaterialPanel>
        			
        			 <!-- 測試儀器 -->
					<m:MaterialPanel  backgroundColor="white"  layoutPosition="RELATIVE" marginTop="20"	padding="7" >
			     		<m:MaterialRow>
        					<m:MaterialColumn> <m:MaterialTextBox placeholder="測試儀器" iconType="DEVELOPER_BOARD" /> </m:MaterialColumn>
        					<m:MaterialColumn>
        						<m:MaterialLabel ui:field="txtInfo3"/> 
        						<m:MaterialLabel ui:field="txtInfo4"/>
        					</m:MaterialColumn>
        					<m:MaterialColumn float="RIGHT">
        						<m:MaterialIcon iconType="CREATE" waves="DEFAULT"  circle="true" ui:field="icoEdit2" />
        						<m:MaterialIcon iconType="CLEAR" waves="DEFAULT"  circle="true" ui:field="icoClear2" />
        					</m:MaterialColumn>
        				</m:MaterialRow>
					</m:MaterialPanel>
					
        			<!-- 報告編號，格式，溫濕度，單位 -->
						<m:MaterialPanel  backgroundColor="white"  layoutPosition="RELATIVE" marginTop="20"	padding="7" >
							<m:MaterialRow>
								<m:MaterialColumn> <m:MaterialListBox ui:field="cmbFormat"/> </m:MaterialColumn>
								<m:MaterialColumn> <m:MaterialListBox tooltip="參考值單位" ui:field="cmbUnitRef" /> </m:MaterialColumn>
								<m:MaterialColumn> <m:MaterialListBox tooltip="器示值單位" ui:field="cmbUnitMea" /> </m:MaterialColumn>
							</m:MaterialRow>
							<m:MaterialRow>
								<m:MaterialColumn> <m:MaterialTextBox placeholder="報告編號" ui:field="boxKey" /> </m:MaterialColumn>
								<m:MaterialColumn> <m:MaterialTextBox placeholder="校正日期" ui:field="boxStmp" /> </m:MaterialColumn>
								<m:MaterialColumn> <m:MaterialTextBox placeholder="附註事項" ui:field="boxMemo" /> </m:MaterialColumn>								
							</m:MaterialRow>
							<m:MaterialRow>
								<m:MaterialColumn> <m:MaterialFloatBox placeholder="環境溫度" ui:field="boxTemp" /> </m:MaterialColumn>
								<m:MaterialColumn> <m:MaterialFloatBox placeholder="大氣壓力" ui:field="boxPress" /> </m:MaterialColumn>
								<m:MaterialColumn> <m:MaterialFloatBox placeholder="相對濕度" ui:field="boxHumid" /> </m:MaterialColumn>
							</m:MaterialRow>
							<m:MaterialRow>
								<m:MaterialColumn> <m:MaterialCheckBox text="使用Logo" value="true" ui:field="chkUseLogo" /> </m:MaterialColumn> 
							</m:MaterialRow>
					</m:MaterialPanel>				
        		</m:MaterialColumn>
        		
        		<m:MaterialColumn>
        			<!-- 射源資訊 -->
					<m:MaterialPanel  backgroundColor="white"  layoutPosition="RELATIVE" marginTop="20"	padding="7" >
						<m:MaterialRow>
							<m:MaterialColumn> <m:MaterialListBox ui:field="cmbEmitter"/> </m:MaterialColumn>
						</m:MaterialRow>
						<m:MaterialRow>
							<m:MaterialColumn> 
								<m:MaterialLabel text="種類大小："/>
								<m:MaterialLabel text="射源活度："/>
								<m:MaterialLabel text="表面大小："/>
								<m:MaterialLabel text="涵蓋因子："/>
								<m:MaterialLabel text="涵蓋機率："/>
								<m:MaterialLabel text="不確定度："/>
								<m:MaterialLabel text="射源序號："/>
								<m:MaterialLabel text="射源認證："/>
							</m:MaterialColumn>
							<m:MaterialColumn>
								<m:MaterialLabel ui:field="txtKindArea"/>
								<m:MaterialLabel ui:field="txtStrength"/>
								<m:MaterialLabel ui:field="txtSurface"/>
								<m:MaterialLabel ui:field="txtFactorK"/>
								<m:MaterialLabel ui:field="txtFactorP"/>
								<m:MaterialLabel ui:field="txtUncertain"/>
								<m:MaterialLabel ui:field="txtSerial"/>
								<m:MaterialLabel ui:field="txtCriteron"/>
							</m:MaterialColumn>
						</m:MaterialRow>
					</m:MaterialPanel>
					
        			<!-- 量測結果 -->
					<m:MaterialPanel  backgroundColor="white"  layoutPosition="RELATIVE" marginTop="20"	padding="7" >
					</m:MaterialPanel>
        		</m:MaterialColumn>
        	</m:MaterialRow>
        	
    	 	<m:MaterialModal type="BOTTOM_SHEET" dismissable="true" inDuration="10" outDuration="10" height="25%" ui:field="dlgSelect">
    	 		<m:MaterialLabel ui:field="txtTotal"/>
 				<m:MaterialCollection ui:field="colSelect"/>
 			</m:MaterialModal>
 			 
        </m:MaterialContainer>
</m:MaterialPanel>

</ui:UiBinder> 

