<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:g2="urn:import:com.googlecode.gwt.charts.client.calendar"
	xmlns:m="urn:import:gwt.material.design.client.ui" >
<ui:style>
</ui:style>
	
<m:MaterialModal type="DEFAULT" width="80%" dismissable="true" inDuration="10" outDuration="10" ui:field="root" >

	<m:MaterialModalContent >
		<m:MaterialRow>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="公司代號" width="5em" ui:field="boxKey"/>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="公司名稱" width="24em" ui:field="boxName"/>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="預約日期" width="11em" ui:field="boxStmp"/>
			</m:MaterialColumn>
		</m:MaterialRow>
		
		<m:MaterialRow>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="郵遞區號" width="5em" ui:field="boxZip"/>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="公司地址" width="24em" ui:field="boxAddr"/>				
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="聯絡電話" width="11em" ui:field="boxPhon"/>
			</m:MaterialColumn>
		</m:MaterialRow>
		
		<m:MaterialRow>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="部門" width="10em" ui:field="boxDept"/>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="聯絡(委託)人" width="8em" ui:field="boxPern"/>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="聯絡方式" width="10em" ui:field="boxMail"/>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<m:MaterialTextBox placeholder="備註" width="9em" ui:field="boxMemo" />
			</m:MaterialColumn>
		</m:MaterialRow>
	</m:MaterialModalContent>
	
	<!-- 確認/取消 -->
	<m:MaterialModalFooter width="95%">		
		<m:MaterialButton text="確認" type="FLAT" ui:field="btnAction" />
		<m:MaterialButton text="取消" type="FLAT" ui:field="btnCancel" />
	</m:MaterialModalFooter>
	
</m:MaterialModal>

</ui:UiBinder> 