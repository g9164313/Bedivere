<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui" >
<ui:style>
	.txtOffset { margin-top: 1.7rem; }
</ui:style>

<m:MaterialModal type="DEFAULT" width="17em" dismissable="true" inDuration="10" outDuration="10" ui:field="root" >

	<m:MaterialRow paddingLeft="13" paddingRight="13">
		<m:MaterialColumn>
			<m:MaterialIntegerBox text="1" width="5em" ui:field="boxIndex" />
		</m:MaterialColumn>
		<m:MaterialColumn styleName='{style.txtOffset}'>
			<m:MaterialLabel text="/0" width="5em" ui:field="txtTotal" />
		</m:MaterialColumn>
	</m:MaterialRow>
	
	<!-- 確認/取消 -->
	<m:MaterialModalFooter>		
		<m:MaterialButton text="確認" type="FLAT" ui:field="btnAction" />
		<m:MaterialButton text="取消" type="FLAT" ui:field="btnCancel" />
	</m:MaterialModalFooter>
	
</m:MaterialModal>

</ui:UiBinder> 