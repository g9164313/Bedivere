<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:g2="urn:import:com.googlecode.gwt.charts.client.calendar"
	xmlns:m="urn:import:gwt.material.design.client.ui" >
	
	<ui:style>
	.important {
		font-weight: bold;
	}
	@external .active;
        .colapsHeader.active{
        background: #e0e0e0;
    }
	</ui:style>
	<m:MaterialCollapsibleItem ui:field="cpiEntry" waves="DEFAULT" width="100%">
	
		<!-- Header component for custome layouts -->
		<m:MaterialCollapsibleHeader addStyleNames="{style.colapsHeader}">
			<m:MaterialRow margin="0">
				<m:MaterialColumn>
					<m:MaterialLabel ui:field="txtDevVendor" />
				</m:MaterialColumn>
				<m:MaterialColumn>				
					<m:MaterialLabel ui:field="txtDevSerial" />
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialLabel ui:field="txtDevNumber"  />
				</m:MaterialColumn>
				<m:MaterialIcon iconType="CREATE" waves="DEFAULT" float="RIGHT" circle="true" ui:field="icoEdit" />	
			</m:MaterialRow>
		</m:MaterialCollapsibleHeader>
		
		<m:MaterialCollapsibleBody>
			<m:MaterialRow>
				<m:MaterialColumn>
					<m:MaterialLabel text="偵檢器類型："/>
				</m:MaterialColumn>
				<m:MaterialColumn>				
					<m:MaterialLabel ui:field="txtDetType" />
				</m:MaterialColumn>				
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn>			
					<m:MaterialLabel text="偵檢器型號："/>
				</m:MaterialColumn>
				<m:MaterialColumn>					
					<m:MaterialLabel ui:field="txtDetSerial" />
				</m:MaterialColumn>				
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn>	
					<m:MaterialLabel text="偵檢器序號："/>
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialLabel  ui:field="txtDetNumber" />
				</m:MaterialColumn>				
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn>	
					<m:MaterialLabel text="偵測窗面積："/>
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialLabel ui:field="txtArea" />
				</m:MaterialColumn>				
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn>	
					<m:MaterialLabel text="方向修正值："/>
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialLabel ui:field="txtFactor" />
				</m:MaterialColumn>				
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn>	
					<m:MaterialLabel text="廠商建議值："/>
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialLabel  ui:field="txtSteer" />
				</m:MaterialColumn>				
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn>	
					<m:MaterialLabel text="附註事項："/>
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialLabel ui:field="txtMemo" />
				</m:MaterialColumn>			
			</m:MaterialRow>
		</m:MaterialCollapsibleBody>
	
	</m:MaterialCollapsibleItem>
</ui:UiBinder> 